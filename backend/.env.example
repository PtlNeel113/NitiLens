# Database Configuration
DATABASE_URL=postgresql://nitilens:nitilens_password@localhost:5432/nitilens_db

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Email Configuration (SendGrid)
EMAIL_API_KEY=your-sendgrid-api-key
EMAIL_FROM=noreply@nitilens.com

# Slack Configuration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Translation API (Optional - uses local models if not set)
TRANSLATION_API_KEY=
TRANSLATION_API_URL=

# LLM API Configuration
LLM_API_KEY=your-llm-api-key
LLM_API_URL=https://api.openai.com/v1

# Application Configuration
ENVIRONMENT=development
DEBUG=true
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Subscription Limits
BASIC_POLICY_LIMIT=1
BASIC_TRANSACTION_LIMIT=10000
PRO_POLICY_LIMIT=10
PRO_TRANSACTION_LIMIT=1000000

# Worker Configuration
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
